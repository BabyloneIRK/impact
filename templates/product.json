}\n\n  /* Contrôles */\n  .vr__controls{margin-top:20px; display:flex; flex-direction:column; align-items:center; gap:14px;}\n  .vr__dots{display:flex; gap:10px;}\n  .vr__dot{\n    width:10px; height:10px; border-radius:50%;\n    background:#c5cec3; opacity:.55;\n    border:none; cursor:pointer; transition:.3s;\n  }\n  .vr__dot.is-active{background:var(--accent); opacity:1;}\n\n  .vr__arrows{display:flex; justify-content:center; align-items:center; gap:18px;}\n  .vr__btn{\n    background:var(--accent);\n    color:#fff;\n    border:none;\n    border-radius:50%;\n    width:38px;\n    height:38px;\n    display:flex;\n    align-items:center;\n    justify-content:center;\n    cursor:pointer;\n    opacity:.9;\n    font-size:20px;\n  }\n  .vr__btn:hover{opacity:1;}\n  @media (max-width:700px){\n    .vr__text{font-size:16px;}\n    .vr__avatar{flex-basis:48px; height:48px;}\n  }\n</style>\n\n<script>\n(() => {\n  const root=document.getElementById('velia-reviews');\n  const viewport=root.querySelector('.vr__viewport');\n  const track=root.querySelector('.vr__track');\n  const slides=Array.from(root.querySelectorAll('.vr__slide'));\n  const prev=root.querySelector('.vr__prev');\n  const next=root.querySelector('.vr__next');\n  const dotsWrap=root.querySelector('.vr__dots');\n  let i=0, n=slides.length, w=viewport.clientWidth, startX=0, dx=0, dragging=false;\n\n  // dots\n  const dots=slides.map((_,k)=>{\n    const b=document.createElement('button');\n    b.className='vr__dot'+(k===0?' is-active':'');\n    b.addEventListener('click',()=>goTo(k));\n    dotsWrap.appendChild(b);\n    return b;\n  });\n\n  function goTo(idx, anim=true){\n    i=(idx+n)%n;\n    track.style.transition=anim?'transform .35s ease':'none';\n    track.style.transform='translateX('+(-i*w)+'px)';\n    dots.forEach((d,k)=>d.classList.toggle('is-active',k===i));\n    viewport.style.height=slides[i].offsetHeight+'px';\n  }\n  function size(){w=viewport.clientWidth; goTo(i,false);}\n  window.addEventListener('resize',size,{passive:true});\n\n  prev.addEventListener('click',()=>goTo(i-1));\n  next.addEventListener('click',()=>goTo(i+1));\n\n  track.addEventListener('pointerdown',e=>{\n    dragging=true; startX=e.clientX; dx=0; track.setPointerCapture(e.pointerId);\n  });\n  track.addEventListener('pointermove',e=>{\n    if(!dragging)return; dx=e.clientX-startX;\n    track.style.transform='translateX('+(-i*w+dx)+'px)';\n  });\n  function endDrag(){\n    if(!dragging)return; dragging=false;\n    if(dx>w*0.15)goTo(i-1);\n    else if(dx<-w*0.15)goTo(i+1);\n    else goTo(i);\n  }\n  track.addEventListener('pointerup',endDrag);\n  track.addEventListener('pointercancel',endDrag);\n  track.addEventListener('pointerleave',endDrag);\n\n  viewport.style.height=slides[i].offsetHeight+'px';\n  size();\n})();\n</script>"
