iews .vr-grid{ grid-template-columns:repeat(3,1fr); overflow:visible; }\n  }\n\n  /* ===== Mobile : carrousel horizontal au swipe ===== */\n  @media (max-width:767px){\n    #velia-reviews .vr-grid{\n      display:flex; gap:16px; overflow-x:auto; padding:2px 14px 8px;\n      scroll-snap-type:x mandatory; -webkit-overflow-scrolling:touch;\n    }\n    #velia-reviews .vr-grid::-webkit-scrollbar{ height:4px; }\n    #velia-reviews .vr-grid::-webkit-scrollbar-track{ background:transparent; }\n    #velia-reviews .vr-grid::-webkit-scrollbar-thumb{ background:#8AA86E66; border-radius:2px; }\n\n    /* chaque carte ≈ 85% de la largeur écran pour un vrai look carrousel */\n    #velia-reviews .vr-card{ flex:0 0 85%; scroll-snap-align:center; }\n  }\n\n  /* ===== Cartes ===== */\n  #velia-reviews .vr-card{\n    background:#fff; border-radius:var(--radius);\n    box-shadow:0 8px 20px rgba(0,0,0,.06);\n    overflow:hidden; display:flex; flex-direction:column;\n  }\n  #velia-reviews .vr-media{\n    position:relative; aspect-ratio:4/3; overflow:hidden;\n  }\n  #velia-reviews .vr-media img{ width:100%; height:100%; object-fit:cover; display:block; }\n  #velia-reviews .vr-quote{\n    position:absolute; right:14px; bottom:-14px; width:44px; height:44px; border-radius:999px;\n    background:var(--velia-green); color:#fff; font-size:34px; font-weight:900;\n    display:grid; place-items:center; box-shadow:0 6px 12px rgba(0,0,0,.15);\n  }\n  #velia-reviews .vr-body{ padding:16px 18px 18px; text-align:center; }\n  #velia-reviews .vr-stars{ display:flex; justify-content:center; gap:6px; margin-bottom:8px; }\n  #velia-reviews .vr-star path{ fill:var(--star); }\n  #velia-reviews .vr-heading{ font-size:18px; font-weight:800; margin:4px 0 6px; color:var(--text); }\n  #velia-reviews .vr-text{ font-size:15px; line-height:1.6; color:var(--muted); margin:0 6px 12px; }\n  #velia-reviews .vr-author{ font-weight:700; font-size:14px; color:var(--velia-green-dark); margin:0; }\n\n  /* Fond doux comme ta ma