ckground:#fff;padding:14px}\n  .pack-card.selected{border:2px solid #8AA86E;box-shadow:0 0 0 3px rgba(138,168,110,.15)}\n  .pack-card.promo{background:#F5F7EC;border-color:#8AA86E}\n  .pack-top{display:flex;justify-content:space-between;align-items:flex-start;flex-wrap:wrap;gap:6px}\n  .pack-left{display:flex;align-items:center;flex-wrap:wrap;gap:8px}\n  .pack-top strong{font-size:16px;font-weight:800}\n  .badge-today{background:#8AA86E;color:#fff;font-size:11px;font-weight:700;text-transform:uppercase;padding:3px 8px 2px;border-radius:6px;line-height:1.1}\n  .pack-price-wrap{display:flex;align-items:baseline;gap:2px}\n  .pack-price{font-weight:800;font-size:17px}\n  .euro{font-weight:700;font-size:14px}\n  .pack-desc{margin:4px 0 6px;font-size:13px;color:#475467}\n  .pack-option select{padding:6px 10px;border-radius:6px;border:1px solid #ccc}\n  .pack-bottom{display:flex;align-items:center;justify-content:space-between;margin-top:6px}\n  .pack-old{font-size:13px;color:#9b9b9b;text-decoration:line-through}\n  .pack-fast{background:#8AA86E33;color:#315343;font-weight:600;padding:3px 10px;border-radius:8px;font-size:13px}\n  .stock-status{display:flex;align-items:center;gap:6px;color:#b91c1c;font-weight:600}\n  .stock-status .dot{width:10px;height:10px;border-radius:50%;background:#b91c1c}\n  .btn-cart{background:#8AA86E;color:#fff;font-weight:800;font-size:16px;border:none;border-radius:10px;padding:14px 0;width:100%;letter-spacing:.5px;text-align:center;display:block;margin:0 auto;transition:opacity .2s}\n  .btn-cart[disabled]{opacity:.7;pointer-events:none}\n</style>\n\n<script>\n(function(){\n  const root = document.getElementById('velia-packs');\n  if(!root) return;\n\n  const variants = {{ variants_json }};\n  const radios = root.querySelectorAll('input[name=\"velia_pack\"]');\n  const idInput = document.getElementById('velia-variant-id');\n  const stockEl = document.getElementById('velia-stock');\n  const atcBtn = document.getElementById('velia-atc');\n\n  // Récupère les valeurs uniques d'option1 (packs) depuis les variantes\n  const packs = [...new Set(variants.map(v => v.option1))];\n\n  // Alimente les valeurs des radios avec les vrais textes de pack (ordre 1 & 2)\n  if (packs[0]) radios[0].value = packs[0];\n  if (packs[1]) radios[1].value = packs[1];\n\n  // Option 2 (ex: Couleur)\n  const opt2Wrap = document.getElementById('velia-opt2-wrap');\n  const opt2Select = document.getElementById('velia-opt2');\n  const hasOpt2 = !!variants[0]?.option2;\n\n  if (hasOpt2 && opt2Wrap && opt2Select) {\n    opt2Wrap.style.display = 'block';\n    const values2 = [...new Set(variants.map(v => v.option2).filter(Boolean))];\n    values2.forEach(v => {\n      const o = document.createElement('option'); o.value = v; o.textContent = v; opt2Select.appendChild(o);\n    });\n    opt2Select.addEventListener('change', updateVariant);\n  }\n\n  // Sélection visuelle exclusive\n  radios.forEach(r => {\n    r.addEventListener('change', () => {\n      root.querySelectorAll('.pack-card').forEach(c => c.classList.remove('selected'));\n      r.closest('.pack-card').classList.add('selected');\n      updateVariant();\n    });\n  });\n\n  function findVariant(packVal, opt2Val){\n    return variants.find(v => v.option1 == packVal && (!hasOpt2 || v.option2 == opt2Val));\n  }\n\n  function updateVariant(){\n    const packVal = root.querySelector('input[name=\"velia_pack\"]:checked')?.value || packs[0];\n    const opt2Val = hasOpt2 && opt2Select ? opt2Select.value : null;\n    const match = findVariant(packVal, opt2Val) || variants[0];\n\n    idInput.value = match.id;\n    stockEl.textContent = match.available ? 'En stock' : 'Rupture';\n  }\n\n  // Init\n  if (!root.querySelector('input[name=\"velia_pack\"]:checked') && radios[0]) radios[0].checked = true;\n  updateVariant();\n\n  // Anti multi-clic : on désactive le bouton dès le clic (soumission native)\n  document.getElementById('velia-form').addEventListener('submit', function(){\n    atcBtn.disabled = true;\n    setTimeout(()=>{ atcBtn.disabled = false; }, 2000); // réactive après 2s si l’utilisateur revient\n  }, {capture:true});\n})();\n</script>"
