        "remove_vertical_spacing": false,
        "remove_horizontal_spacing": false,
        "liquid": "<!-- ===== VELIA • Carrousel vidéo (6) ===== -->\n<div id=\"velia-video-carousel\" class=\"vvc\">\n  <div class=\"vvc__viewport\">\n    <div class=\"vvc__track\">\n      {% assign vids = \"\n      https://cdn.shopify.com/videos/c/o/v/b14344fe727b48cb8ee3f60611aab2ea.mp4,\n      https://cdn.shopify.com/videos/c/o/v/6cca4332e6574941b33b99eb3e7f1f64.mp4,\n      https://cdn.shopify.com/videos/c/o/v/aca0ddf013fd474f8d064d801d1d1ba2.mp4,\n      https://cdn.shopify.com/videos/c/o/v/578c9fb5f42e4ca7877203e13a1b238a.mp4,\n      https://cdn.shopify.com/videos/c/o/v/c67f58cc27494417aba9946503621b3c.mp4,\n      https://cdn.shopify.com/videos/c/o/v/f7ceda5112f14f2d912a2272e5da152e.mp4\n      \" | split: \",\" %}\n\n      {% for url in vids %}\n      <article class=\"vvc__slide\">\n        <div class=\"vvc__media\">\n          <video class=\"vvc__video\" playsinline muted preload=\"metadata\" src=\"{{ url | strip }}\"></video>\n          <button class=\"vvc__mute\" aria-label=\"Activer/ couper le son\"></button>\n        </div>\n      </article>\n      {% endfor %}\n    </div>\n  </div>\n\n  <!-- controls -->\n  <button class=\"vvc__nav vvc__nav--prev\" aria-label=\"Précédent\"></button>\n  <button class=\"vvc__nav vvc__nav--next\" aria-label=\"Suivant\"></button>\n  <div class=\"vvc__dots\" role=\"tablist\" aria-label=\"Navigation carrousel\"></div>\n</div>\n\n<style>\n  #velia-video-carousel{\n    --gap:16px;\n    --radius:22px;\n    --accent:#7BA06F;           /* vert Velia */\n    --card:#E8ECD9;             /* fond autour de la vidéo */\n    --shadow:0 10px 24px rgba(0,0,0,.12);\n  }\n  .vvc{position:relative;max-width:1100px;margin:0 auto;padding:8px 16px 26px}\n  .vvc__viewport{overflow:hidden}\n  .vvc__track{display:flex;gap:var(--gap);overflow-x:auto;padding:4px 6px;scroll-snap-type:x mandatory;-webkit-overflow-scrolling:touch}\n  .vvc__slide{flex:0 0 calc(100% - 40px);scroll-snap-align:center}\n  @media(min-width:640px){.vvc__slide{flex-basis:calc((100% - var(--gap))/2)}}\n  @media(min-width:1024px){.vvc__slide{flex-basis:calc((100% - (var(--gap)*2))/3)}}\n\n  .vvc__media{position:relative;aspect-ratio:9/16;border-radius:var(--radius);overflow:hidden;background:var(--card);box-shadow:var(--shadow);transition:transform .18s ease,box-shadow .18s ease}\n  .vvc__media.is-playing{transform:translateY(-8px);box-shadow:0 16px 34px rgba(0,0,0,.2)}\n  .vvc__video{width:100%;height:100%;object-fit:cover;display:block;background:#e9e6dc}\n\n  .vvc__mute{position:absolute;right:12px;bottom:12px;width:40px;height:40px;border:none;border-radius:999px;background:rgba(0,0,0,.45);backdrop-filter:blur(4px);cursor:pointer}\n  .vvc__mute::before{content:\"\";display:block;width:20px;height:20px;margin:10px auto;background:#fff;mask:url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" fill=\"white\" viewBox=\"0 0 24 24\"><path d=\"M3 9v6h4l5 4V5L7 9H3z\"/><path d=\"M16 9l5 5m0-5l-5 5\" stroke=\"white\" stroke-width=\"2\" fill=\"none\" stroke-linecap=\"round\"/></svg>') no-repeat center/contain}\n  .vvc__mute.is-sound::before{mask:url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" fill=\"white\" viewBox=\"0 0 24 24\"><path d=\"M3 9v6h4l5 4V5L7 9H3z\"/><path d=\"M16 7c2.8 2.2 2.8 7.8 0 10\" stroke=\"white\" stroke-width=\"2\" fill=\"none\" stroke-linecap=\"round\"/></svg>') no-repeat center/contain}\n\n  .vvc__nav{position:absolute;top:50%;transform:translateY(-50%);width:44px;height:44px;border:none;border-radius:999px;background:#fff;box-shadow:0 8px 18px rgba(0,0,0,.15);cursor:pointer;display:grid;place-items:center}\n  .vvc__nav--prev{left:-6px}.vvc__nav--next{right:-6px}\n  .vvc__nav::before{content:\"\";width:18px;height:18px;background:var(--accent);clip-path:polygon(30% 50%,60% 25%,60% 40%,75% 40%,75% 60%,60% 60%,60% 75%);transform:rotate(180deg)}\n  .vvc__nav--next::before{transform:none}\n  @media(max-width:768px){.vvc__nav{display:none}} /* mobile: swipe */\n\n  .vvc__dots{margin-top:12px;display:flex;gap:6px;justify-content:center}\n  .vvc__dots button{width:8px;height:8px;border:none;border-radius:999px;background:#C9D3C0;cursor:pointer}\n  .vvc__dots button.is-active{background:var(--accent)}\n</style>\n\n<script>\n(()=> {\n  const root = document.getElementById('velia-video-carousel');\n  if(!root) return;\n\n  const viewport = root.querySelector('.vvc__viewport');\n  const track = root.querySelector('.vvc__track');\n  const slides = [...root.querySelectorAll('.vvc__slide')];\n  const prev = root.querySelector('.vvc__nav--prev');\n  const next = root.querySelector('.vvc__nav--next');\n  const dotsWrap = root.querySelector('.vvc__dots');\n\n  /* dots */\n  slides.forEach((_,i)=>{ const b=document.createElement('button'); b.ariaLabel=`Aller à ${i+1}`; dotsWrap.appendChild(b); });\n  const dots=[...dotsWrap.children];\n  const setDot=i=>dots.forEach((d,idx)=>d.classList.toggle('is-active',idx===i));\n\n  /* videos */\n  const videos = slides.map(s=>s.querySelector('.vvc__video'));\n  const mutes  = slides.map(s=>s.querySelector('.vvc__mute'));\n\n  // 👉 Forcer l’affichage immédiat de la 1re frame\n  videos.forEach(v=>{\n    v.muted = true; v.playsInline = true; v.autoplay = true;\n    v.load();\n    const reveal=()=>{ if (v.currentTime===0) try{ v.currentTime = 0.05; }catch(e){} };\n    v.addEventListener('loadeddata', reveal, {once:true});\n    // fallback au cas où\n    setTimeout(reveal, 600);\n  });\n\n  // play/pause + lift + pause autres\n  function togglePlay(i){\n    const v = videos[i], media = v.closest('.vvc__media');\n    if(v.paused){\n      videos.forEach((ov,idx)=>{ if(idx!==i){ ov.pause(); ov.closest('.vvc__media').classList.remove('is-playing'); }});\n      v.play().then(()=>media.classList.add('is-playing')).catch(()=>{});\n    }else{\n      v.pause(); media.classList.remove('is-playing');\n    }\n  }\n  videos.forEach((v,i)=>{\n    v.addEventListener('click',()=>togglePlay(i));\n    v.addEventListener('ended',()=>{ v.currentTime=0; v.closest('.vvc__media').classList.remove('is-playing'); });\n  });\n\n  // mute buttons\n  mutes.forEach((btn,i)=>btn.addEventListener('click',e=>{\n    e.stopPropagation(); const v=videos[i]; v.muted=!v.muted; btn.classList.toggle('is-sound',!v.muted);\n  }));\n\n  /* nav */\n  const step = ()=> slides[0].getBoundingClientRect().width + parseFloat(getComputedStyle(track).gap||16);\n  const go = dir => track.scrollBy({left: dir*step(), behavior:'smooth'});\n  prev?.addEventListener('click',()=>go(-1));\n  next?.addEventListener('click',()=>go(1));\n\n  /* active dot sync */\n  let active=0;\n  function sync(){\n    const center = viewport.getBoundingClientRect().left + viewport.clientWidth/2;\n    let best=0,dist=1e9;\n    slides.forEach((s,i)=>{ const r=s.getBoundingClientRect(), c=r.left+r.width/2, d=Math.abs(c-center); if(d<dist){dist=d;best=i;}});\n    if(best!==active){ active=best; setDot(active); }\n  }\n  track.addEventListener('scroll',()=>requestAnimationFrame(sync));\n  window.addEventListener('resize',sync); sync();\n\n  // dots -> scroll\n  dots.forEach((d,i)=>d.addEventListener('click',()=>{\n    const left = slides[i].offsetLeft - (viewport.clientWidth - slides[i].clientWidth)/2;\n    track.scrollTo({left, behavior:'smooth'});\n  }));\n\n  // pause quand le slide sort du viewport\n  const io = new IntersectionObserver(entries=>{\n    entries.forEach(({isIntersecting,target})=>{\n      const v = target.querySelector('.vvc__video'); if(!v) return;\n      if(!isIntersecting){ v.pause(); target.querySelector('.vvc__media').classList.remove('is-playing'); }\n    });\n  },{root:track, threshold:.5});\n  slides.forEach(s=>io.observe(s));\n})();\n</script>",
