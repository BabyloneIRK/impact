            "liquid": "{% assign variants_json = product.variants | json %}\n{% assign options = product.options_with_values %}\n\n<div id=\"velia-packs-{{ section.id }}\" class=\"velia-pack-section\">\n  <!-- Radios PACK (valeurs uniques de l'option 1) -->\n  <div class=\"pack-card selected\">\n    <label class=\"pack-top\">\n      <div class=\"pack-left\">\n        <input type=\"radio\" name=\"velia_pack\" value=\"1 Flacon\" checked>\n        <strong>1 Flacon</strong>\n      </div>\n      <span class=\"pack-price\" data-pack=\"1 Flacon\"></span>\n    </label>\n    <p class=\"pack-desc\">{{ product.title }}</p>\n\n    <!-- Sélecteur option 2 (ex: Couleur) - s'affiche seulement si présent -->\n    {% if options.size > 1 %}\n      <div class=\"pack-option\">\n        <select id=\"velia-opt2-{{ section.id }}\"></select>\n      </div>\n    {% endif %}\n  </div>\n\n  <div class=\"pack-card promo\">\n    <label class=\"pack-top\">\n      <div class=\"pack-left\">\n        <input type=\"radio\" name=\"velia_pack\" value=\"1 Acheté = 1 à -50 %\">\n        <strong>1 Acheté = 1 à -50 %</strong>\n      </div>\n      <span class=\"badge-today\">Aujourd’hui seulement</span>\n      <span class=\"pack-price\" data-pack=\"1 Acheté = 1 à -50 %\"></span>\n    </label>\n    <span class=\"pack-old\" id=\"velia-old-{{ section.id }}\"></span>\n    <div class=\"pack-fast\">⏳ Stock limité</div>\n  </div>\n\n  <!-- Stock -->\n  <div class=\"stock-status\"><span class=\"dot\"></span> <span id=\"velia-stock-{{ section.id }}\">En stock</span></div>\n\n  <!-- Vrai formulaire Shopify -->\n  <form method=\"post\" action=\"/cart/add\" id=\"velia-form-{{ section.id }}\">\n    <input type=\"hidden\" name=\"id\" id=\"velia-variant-id-{{ section.id }}\">\n    <input type=\"hidden\" name=\"quantity\" value=\"1\">\n    <button type=\"submit\" class=\"btn-cart\">AJOUTER AU PANIER</button>\n  </form>\n</div>\n\n<style>\n  .velia-pack-section{display:grid;gap:14px;margin-top:10px}\n  .pack-card{border:1px solid #C7C7B7;border-radius:12px;background:#fff;padding:14px}\n  .pack-card.selected{border:2px solid #8AA86E;box-shadow:0 0 0 3px rgba(138,168,110,.15)}\n  .pack-card.promo{background:#F5F7EC;border-color:#8AA86E}\n  .pack-top{display:flex;align-items:center;justify-content:space-between;gap:6px;cursor:pointer}\n  .pack-left{display:flex;align-items:center;gap:8px}\n  .pack-top strong{font-size:16px;font-weight:800}\n  .pack-desc{margin:4px 0 6px;font-size:13px;color:#475467}\n  .pack-option select{padding:6px 10px;border-radius:6px;border:1px solid #ccc}\n  .badge-today{background:#8AA86E;color:#fff;font-size:11px;font-weight:700;text-transform:uppercase;padding:2px 8px;border-radius:6px;margin-right:6px}\n  .pack-price{font-weight:800;font-size:16px}\n  .pack-old{font-size:13px;color:#9b9b9b;text-decoration:line-through;margin-left:8px}\n  .pack-fast{margin-top:6px;background:#8AA86E33;color:#315343;font-weight:600;display:inline-block;padding:3px 10px;border-radius:8px;font-size:13px}\n  .stock-status{display:flex;align-items:center;gap:6px;color:#b91c1c;font-weight:600}\n  .stock-status .dot{width:10px;height:10px;border-radius:50%;background:#b91c1c}\n  .btn-cart{background:#8AA86E;color:#fff;font-weight:800;font-size:16px;border:none;border-radius:10px;padding:14px 0;width:100%;letter-spacing:.5px;text-align:center;display:block;margin:0 auto}\n  .btn-cart:hover{background:#79965D}\n</style>\n\n<script>\n(function(){\n  const rootId = 'velia-packs-{{ section.id }}';\n  const root = document.getElementById(rootId);\n  if(!root) return;\n\n  const variants = {{ variants_json }};\n  const hasOpt2 = {{ options.size | json }} > 1;\n  const opt1Name = {{ options.size | json }} > 0 ? {{ options[0].name | json }} : 'Pack';\n  const opt2Name = {{ options.size | json }} > 1 ? {{ options[1].name | json }} : null;\n\n  // Récupère valeurs uniques d'option1 (Pack) depuis les variantes\n  const packValues = [...new Set(variants.map(v => v.option1))];\n\n  // Aligne les radios affichés avec les valeurs réelles si possible\n  root.querySelectorAll('input[name=\"velia_pack\"]').forEach((radio, idx)=>{\n    if(packValues[idx]) radio.value = packValues[idx];\n    // effet visuel \"selected\" sur la card\n    radio.addEventListener('change', ()=>{\n      root.querySelectorAll('.pack-card').forEach(c=>c.classList.remove('selected'));\n      radio.closest('.pack-card').classList.add('selected');\n      updateFromUI();\n    });\n  });\n\n  // Remplit le select option 2 s'il existe (ex: Couleur)\n  let opt2Select = null;\n  if(hasOpt2){\n    opt2Select = document.getElementById('velia-opt2-{{ section.id }}');\n    const opt2Values = [...new Set(variants.map(v => v.option2))].filter(Boolean);\n    opt2Values.forEach(val=>{\n      const o = document.createElement('option'); o.value = val; o.textContent = val; opt2Select.appendChild(o);\n    });\n    opt2Select.addEventListener('change', updateFromUI);\n  }\n\n  // Met à jour prix initial pour chaque pack (affichage)\n  root.querySelectorAll('.pack-price').forEach(span=>{\n    const pack = span.getAttribute('data-pack');\n    // si on a synché radio->packValues plus haut, reprends le texte actuel si nécessaire\n    const fallbackPack = packValues.find(p => p) || pack;\n    const match = variants.find(v => v.option1 == (pack || fallbackPack));\n    if(match){\n      span.textContent = Shopify.formatMoney(match.price, \"{{ shop.money_format }}\").replace('.00','');\n    }\n  });\n\n  // Mise à jour variante + prix + stock\n  function updateFromUI(){\n    const pack = root.querySelector('input[name=\"velia_pack\"]:checked').value;\n    const opt2 = hasOpt2 && opt2Select ? opt2Select.value : null;\n\n    // trouver la variante qui matche\n    const match = variants.find(v => {\n      const ok1 = (v.option1 == pack);\n      const ok2 = hasOpt2 ? (v.option2 == opt2) : true;\n      return ok1 && ok2;\n    }) || variants[0];\n\n    // injecte l'ID de variante dans le vrai formulaire\n    const idInput = document.getElementById('velia-variant-id-{{ section.id }}');\n    idInput.value = match.id;\n\n    // prix\n    const priceEl = root.querySelector('.pack-card.selected .pack-price');\n    if(priceEl) priceEl.textContent = Shopify.formatMoney(match.price, \"{{ shop.money_format }}\").replace('.00','');\n\n    // ancien prix si promo\n    const old = document.getElementById('velia-old-{{ section.id }}');\n    if(old){\n      if(match.compare_at_price && match.compare_at_price > match.price){\n        old.style.display = 'inline';\n        old.textContent = Shopify.formatMoney(match.compare_at_price, \"{{ shop.money_format }}\").replace('.00','');\n      } else {\n        old.style.display = 'none';\n      }\n    }\n\n    // stock\n    const stockEl = document.getElementById('velia-stock-{{ section.id }}');\n    if(stockEl) stockEl.textContent = match.available ? 'En stock' : 'Rupture';\n  }\n\n  // Init\n  updateFromUI();\n})();\n</script>"
