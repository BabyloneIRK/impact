            "liquid": "{% assign variants_json = product.variants | json %}\n\n<div id=\"velia-packs\" class=\"velia-pack-section\">\n\n  <!-- Pack 1 -->\n  <div class=\"pack-card selected\">\n    <label class=\"pack-top\">\n      <div class=\"pack-left\">\n        <input type=\"radio\" name=\"velia_pack\" value=\"\" checked>\n        <strong class=\"pack-title-1\">1 Flacon</strong>\n      </div>\n      <div class=\"pack-price-wrap\">\n        <span class=\"pack-price\">39,95</span><span class=\"euro\">€</span>\n      </div>\n    </label>\n    <p class=\"pack-desc\">{{ product.title }}</p>\n\n    <!-- Option 2 (ex: Couleur) — facultatif -->\n    <div class=\"pack-option\" id=\"velia-opt2-wrap\" style=\"display:none\">\n      <select id=\"velia-opt2\"></select>\n    </div>\n  </div>\n\n  <!-- Pack 2 -->\n  <div class=\"pack-card promo\">\n    <label class=\"pack-top\">\n      <div class=\"pack-left\">\n        <input type=\"radio\" name=\"velia_pack\" value=\"\">\n        <strong>1 Acheté = 1 à -50 %</strong>\n        <span class=\"badge-today\">AUJOURD’HUI SEULEMENT</span>\n      </div>\n      <div class=\"pack-price-wrap\">\n        <span class=\"pack-price\">59,95</span><span class=\"euro\">€</span>\n      </div>\n    </label>\n\n    <div class=\"pack-bottom\">\n      <span class=\"pack-old\">79,90 €</span>\n      <span class=\"pack-fast\">⏳ Stock limité</span>\n    </div>\n  </div>\n\n  <!-- Stock -->\n  <div class=\"stock-status\"><span class=\"dot\"></span> <span id=\"velia-stock\">En stock</span></div>\n\n  <!-- FORM Shopify natif -->\n  <form id=\"velia-form\" method=\"post\" action=\"/cart/add\">\n    <input type=\"hidden\" name=\"id\" id=\"velia-variant-id\">\n    <input type=\"hidden\" name=\"quantity\" value=\"1\">\n    <button id=\"velia-atc\" type=\"submit\" class=\"btn-cart\"><span>AJOUTER AU PANIER</span></button>\n  </form>\n</div>\n\n<style>\n  :root{ --velia-green:#8AA86E; --velia-green-dark:#5E7D59; }\n\n  .velia-pack-section{display:grid;gap:14px;margin-top:10px}\n  .pack-card{border:1px solid #C7C7B7;border-radius:12px;background:#fff;padding:14px}\n  .pack-card.selected{border:2px solid var(--velia-green);box-shadow:0 0 0 3px rgba(138,168,110,.15)}\n  .pack-card.promo{background:#F5F7EC;border-color:var(--velia-green)}\n  .pack-top{display:flex;justify-content:space-between;align-items:flex-start;flex-wrap:wrap;gap:6px}\n  .pack-left{display:flex;align-items:center;flex-wrap:wrap;gap:8px}\n  .pack-top strong{font-size:16px;font-weight:800}\n  .badge-today{background:var(--velia-green);color:#fff;font-size:11px;font-weight:700;text-transform:uppercase;padding:3px 8px 2px;border-radius:6px;line-height:1.1}\n  .pack-price-wrap{display:flex;align-items:baseline;gap:2px}\n  .pack-price{font-weight:800;font-size:17px}\n  .euro{font-weight:700;font-size:14px}\n  .pack-desc{margin:4px 0 6px;font-size:13px;color:#475467}\n  .pack-option select{padding:6px 10px;border-radius:6px;border:1px solid #ccc}\n  .pack-bottom{display:flex;align-items:center;justify-content:space-between;margin-top:6px}\n  .pack-old{font-size:13px;color:#9b9b9b;text-decoration:line-through}\n  .pack-fast{background:#8AA86E33;color:#315343;font-weight:600;padding:3px 10px;border-radius:8px;font-size:13px}\n  .stock-status{display:flex;align-items:center;gap:6px;color:#b91c1c;font-weight:600}\n  .stock-status .dot{width:10px;height:10px;border-radius:50%;background:#b91c1c}\n\n  /* ===== Effet bouton Velia (vert qui se resserre → fond blanc + contour vert) */\n  .btn-cart{\n    position:relative; overflow:hidden; border-radius:10px;\n    border:2px solid var(--velia-green);\n    background:#fff; color:#fff; font-weight:800; font-size:16px;\n    padding:14px 0; width:100%; letter-spacing:.5px; text-align:center; display:block;\n    transition:color .35s ease .12s, border-color .35s ease, transform .06s ease;\n  }\n  .btn-cart::before{\n    content:\"\"; position:absolute; inset:0; background:var(--velia-green); border-radius:inherit;\n    transform:scale(1); transform-origin:50% 50%; transition:transform .55s ease-in-out; z-index:0;\n  }\n  .btn-cart span{position:relative; z-index:1;}\n  .btn-cart:hover::before, .btn-cart:focus-visible::before{ transform:scale(0); }\n  .btn-cart:hover, .btn-cart:focus-visible{ color:var(--velia-green); border-color:var(--velia-green); }\n  .btn-cart:active{ transform:translateY(1px); }\n  .btn-cart[disabled]{ opacity:.75; pointer-events:none; }\n  .btn-cart[disabled]::before{ transition:none; }\n</style>\n\n<script>\n(() => {\n  const root = document.getElementById('velia-packs');\n  if(!root) return;\n\n  const variants = {{ variants_json }};\n  const radios   = root.querySelectorAll('input[name=\"velia_pack\"]');\n  const idInput  = document.getElementById('velia-variant-id');\n  const stockEl  = document.getElementById('velia-stock');\n  const form     = document.getElementById('velia-form');\n  const atcBtn   = document.getElementById('velia-atc');\n\n  /* === MAP DES PACKS depuis les variantes === */\n  const packs = [...new Set(variants.map(v => v.option1))];\n  if (packs[0]) radios[0].value = packs[0];\n  if (packs[1]) radios[1].value = packs[1];\n\n  /* === Option 2 (si présente) === */\n  const opt2Wrap = document.getElementById('velia-opt2-wrap');\n  const opt2Select = document.getElementById('velia-opt2');\n  const hasOpt2 = !!variants[0]?.option2;\n\n  if (hasOpt2 && opt2Wrap && opt2Select){\n    opt2Wrap.style.display = 'block';\n    const values2 = [...new Set(variants.map(v => v.option2).filter(Boolean))];\n    values2.forEach(v => { const o=document.createElement('option'); o.value=v; o.textContent=v; opt2Select.appendChild(o); });\n    opt2Select.addEventListener('change', updateVariant);\n  }\n\n  /* === Sélection visuelle === */\n  radios.forEach(r => {\n    r.addEventListener('change', () => {\n      root.querySelectorAll('.pack-card').forEach(c => c.classList.remove('selected'));\n      r.closest('.pack-card').classList.add('selected');\n      updateVariant();\n    });\n  });\n\n  function findVariant(packVal, opt2Val){\n    return variants.find(v => v.option1 == packVal && (!hasOpt2 || v.option2 == opt2Val));\n  }\n\n  function updateVariant(){\n    const packVal = root.querySelector('input[name=\"velia_pack\"]:checked')?.value || packs[0];\n    const opt2Val = hasOpt2 && opt2Select ? opt2Select.value : null;\n    const match = findVariant(packVal, opt2Val) || variants[0];\n    idInput.value = match.id;\n    stockEl.textContent = match.available ? 'En stock' : 'Rupture';\n    atcBtn.disabled = !match.available;\n  }\n\n  if (!root.querySelector('input[name=\"velia_pack\"]:checked') && radios[0]) radios[0].checked = true;\n  updateVariant();\n\n  /* === AJOUT AU PANIER + OUVERTURE DU TIROIR === */\n  form.addEventListener('submit', async (e) => {\n    e.preventDefault();       // bloque la redirection\n    if (atcBtn.disabled) return;\n    atcBtn.disabled = true;\n\n    const fd = new FormData(form);\n\n    try {\n      // 1) add.js (AJAX)\n      const res = await fetch('/cart/add.js', {\n        method:'POST',\n        headers:{ 'Accept':'application/json' },\n        body: fd\n      });\n      if(!res.ok) throw await res.json().catch(()=>({}));\n\n      // 2) refresh cart data (facultatif, utile pour compteurs)\n      await fetch('/cart.js', { headers:{'Accept':'application/json'} }).catch(()=>{});\n\n      // 3) ouvrir le drawer\n      if (!openCartDrawer()) {\n        // fallback si pas de drawer détecté : page panier\n        window.location.href = '/cart';\n      }\n    } catch(err){\n      console.error('ATC error', err);\n      window.location.href = '/cart';\n    } finally {\n      atcBtn.disabled = false;\n    }\n  }, {capture:true});\n\n  function openCartDrawer(){\n    let opened = false;\n\n    // A) éléments custom courants\n    const el = document.querySelector('cart-drawer, cart-notification, cart-sidebar, drawer-cart');\n    if (el) { try { el.open?.(); el.show?.(); el.setAttribute?.('open',''); opened = true; } catch(e){} }\n\n    // B) évènements souvent écoutés\n    document.documentElement.dispatchEvent(new CustomEvent('cart:updated'));\n    document.documentElement.dispatchEvent(new CustomEvent('cart:open'));\n    window.dispatchEvent(new CustomEvent('cart-drawer:open'));\n\n    // C) triggers classiques (Impact/Dawn & apps slide cart)\n    const triggers = document.querySelectorAll(\n      '[data-cart-toggle],[data-cart-open],[data-drawer-open=\"cart\"],[data-drawer-open=\"drawer-cart\"],.js-drawer-open-cart,.header__icon--cart'\n    );\n    if (triggers.length){ triggers[0].click(); opened = true; }\n\n    // D) vérif visuelle\n    if (document.querySelector('.cart-drawer, .drawer--cart, [aria-label=\"Cart drawer\"]')) opened = true;\n\n    return opened;\n  }\n})();\n</script>"
          }
