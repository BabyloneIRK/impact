adius: 6px;\n  overflow: hidden;\n  max-width: 320px;\n}\n\n.velia-footer__form input {\n  flex: 1;\n  padding: 10px 12px;\n  border: none;\n  background: transparent;\n  color: #111111;\n  font-size: 14px;\n}\n\n.velia-footer__form input::placeholder {\n  color: rgba(17, 17, 17, 0.6);\n}\n\n.velia-footer__form button {\n  background: rgba(17, 17, 17, 0.05);\n  border: none;\n  color: #111111;\n  padding: 0 14px;\n  cursor: pointer;\n  transition: background 0.3s ease;\n}\n\n.velia-footer__form button:hover {\n  background: rgba(17, 17, 17, 0.15);\n}\n\n/* Liens */\n.velia-footer__links {\n  flex: 1 1 200px;\n}\n\n.velia-footer__links ul {\n  list-style: none;\n  padding: 0;\n  margin: 0;\n}\n\n.velia-footer__links li {\n  margin-bottom: 8px;\n}\n\n.velia-footer__links a {\n  color: rgba(17, 17, 17, 0.9);\n  text-decoration: none;\n  font-size: 15px;\n  transition: opacity 0.3s ease;\n}\n\n.velia-footer__links a:hover {\n  opacity: 0.7;\n}\n\n/* --- Bottom part --- */\n.velia-footer__bottom {\n  border-top: 1px solid rgba(17, 17, 17, 0.15);\n  padding-top: 30px;\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  gap: 20px;\n}\n\n.velia-footer__payments {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  gap: 20px;\n  flex-wrap: wrap;\n}\n\n.velia-footer__payments img {\n  height: 26px;\n  width: auto;\n  filter: none !important; /* 🔥 on enlève le filtre blanc */\n  opacity: 0.9;\n}\n\n.velia-footer__bottom p {\n  font-size: 13px;\n  color: rgba(17, 17, 17, 0.8);\n}\n\n/* --- Responsive --- */\n@media (max-width: 768px) {\n  .velia-footer__top {\n    flex-direction: column;\n  }\n\n  .velia-footer__newsletter, .velia-footer__links {\n    flex: 1 1 100%;\n  }\n\n  .velia-footer__form {\n    max-width: 100%;\n  }\n}\n</style>",
